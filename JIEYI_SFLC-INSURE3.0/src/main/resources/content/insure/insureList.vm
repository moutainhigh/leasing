 <!DOCTYPE html>
<html>
    <head>
    	#parse("content/importBase.vm")
		<script type="text/javascript" language="JavaScript" src="$_basePath/insure/js/hj_util.js"></script>
        <meta charset="UTF-8">
        <title>保险管理</title>
    </head>
 <body class="easyui-layout" style="background-image:none;">
	<div region="center" border="false">
		<div id="pageForm" style="height:auto;" border="true">
		   <form id="queryForm">
    		<table width="100%" cellspacing="0" cellpadding="4px;" border="0">
                <tr>
                   <td align="right">项目编号</td>
				   <td>
                    	<input class="input_03" type="text" size ="20" name="PRO_CODE" />
                   </td>
                   <td align="right">供应商</td>
				    <td>
                    	<input class="input_03" type="text" size ="20" name="SUPPLIERS_NAME" />
                   </td>
				    <td align="right">客户名称</td>
				    <td>
                    	<input class="input_03" type="text" size ="20" name="NAME" />
                   </td>
				    <td align="right">出厂编号</td>
				    <td>
                    	<input class="input_03" type="text" size ="20" name="WHOLE_ENGINE_CODE" />
                   </td>
				    <td>
				   	<a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-search" onclick='se();'>搜 索</a>
				   </td>
               </tr>
			   <tr>
			   	  <td align="right">租赁物名称</td>
				   <td>
                    	<select name="PRODUCT_NAME" style="width:100px;">
						<option value="">　　　</option>
						#foreach($!item in $data.products)
						<option value="$!item.PRODUCT_NAME">$!item.PRODUCT_NAME</option>
						#end
						</select>
                   </td>
                   <td align="right">厂商</td>
				    <td>
                    	<select name="COMPANY_NAME" style="width:100px;">
						<option value="">　　　</option>
						#foreach($!item in $data.companys)
						<option value="$!item.COMPANY_NAME">$!item.COMPANY_NAME</option>
						#end
						</select>
                   </td>
				    <td align="right">验收日期</td>
				    <td colspan="3">
                    	<input class="easyui-datebox" type="text" size ="10" name="B_DELIVER_DATE"  />到
						<input class="easyui-datebox" type="text" size ="10" name="E_DELIVER_DATE" />
                   </td>
				    <td>
				   	<a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-cancel" onclick='clear_();'>清 空</a>
				   </td>
			   </tr>
			   <tr><td colspan="9"><div>
                #if ($!type_==2)
				<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-return" plain="true" onclick="approval('no')">驳回</a>
				<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" plain="true" onclick="approval('yes')">审核</a>
				<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-save" plain="true" onclick="exportEXCEL()">导出</a>
				#else
				<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-save" plain="true" id="exportEXCEL" onclick="exportEXCEL()">导出</a>
				#end
               
				<input type="checkbox" id="check1" onclick="selectPage(this)">
				<label for="check1">页面全选</label>
                <input type="checkbox" id="check2"  name="selectAll"> 
				<label for="check2">数据全选</label>
        		</div>
				</td></tr>
          </table>
		  </form>
		</div>
        <table style="width:900px"  id="pageTable" fit="true" class="easyui-datagrid" 
		#if ($!type_==2) data-options="pageSize:20,pagination:true,rownumbers:true,url:'$_basePath/insure/Insure!insureCheckListing.action',toolbar:'#pageForm'">
		#else data-options="pageSize:20,pagination:true,rownumbers:true,url:'$_basePath/insure/Insure!insureListing.action',toolbar:'#pageForm'">
		#end
             <tr>
				<thead>
    				<th data-options="field:'PRO_CODE',width:102">项目编号</th>
    				<th data-options="field:'SUPPLIERS_NAME',width:150">供应商</th>
    				<th data-options="field:'NAME',width:102">客户名称</th>
    				<th data-options="field:'FAVOREE',width:100">受益人</th>
    				<th data-options="field:'DELIVER_DATE1',width:80">验收日期</th>
    				<th data-options="field:'COMPANY_NAME',width:102">厂商</th>
    				<th data-options="field:'PRODUCT_NAME',width:102">租赁物名称</th>
    				<th data-options="field:'SPEC_NAME',width:100">租赁物型号</th>
    				<th data-options="field:'WHOLE_ENGINE_CODE',width:100">出厂编号</th>
    				<th data-options="field:'DELIVER_DATE',width:80">保险起期</th>
    				<th data-options="field:'END_DATE',width:80">保险止期</th>
    				<th data-options="field:'TOTAL_PERIODS',width:60">保险期限</th>
    				<th data-options="field:'UNIT_PRICE',width:60">保险金额</th>
    				<th data-options="field:'INSURE_MONEY',width:60">实收保费</th>
    				<th data-options="field:'ID',hidden:true">ID</th>
                </thead>
            </tr>
		 </table>
	</div>
	<script type="text/javascript">
		function clear_(){
			 $('#queryForm').form('clear');
		}
		function se(){
			//当url上面的type_=2时候为审核
			var url_="$_basePath/insure/Insure!insureListing.action";
			if(getUrl_().type_==2){
				url_="$_basePath/insure/Insure!insureCheckListing.action";
			}
			var jsonData = $("#queryForm").serialize();
//			jsonData = _parserUrl(jsonData);
//			$('#pageTable').datagrid('load', jsonData);
			var jsonData = "?page="+$(".pagination-num").val()+"&rows="+$(".pagination-page-list  option:selected").val()+"&"+$("#queryForm").serialize();
			var parserUrl = _parserUrl(jsonData);
			jQuery.ajax({
			   type: "POST",
			   dataType:"json",
			   url: url_,
			   data: jsonData,
			   success: function(msg){
			     //alert( "Data Saved: ");
				 $('#pageTable').datagrid("loadData",msg);
			   }
			});
			$('#exportEXCEL').linkbutton('enable');
		}
		
		function selectPage(checkbox){
			var tt = checkbox;
			if(tt.checked){
				$('#pageTable').datagrid("selectAll");
			}else{
				$('#pageTable').datagrid("unselectAll");
			}
		}
		function exportEXCEL(){
			var data = $('#pageTable').datagrid("getSelections");
			var PRO_CODES = new Array();
			$(data).each(function(){
				PRO_CODES.push(this.ID);
			})
			//
			var jsonData = $("#queryForm").serialize();
			var jsonData = $("#queryForm").serialize()+"&PRO_CODES="+PRO_CODES.toString();
			$('#exportEXCEL').linkbutton('disable');
			var url_ = "$_basePath/insure/Insure!exportExcel.action?"+jsonData;
			if (getUrl_().type_ == 2) {
				url_ = "$_basePath/insure/Insure!insureCheckExportExcel.action?"+jsonData;
			}
			window.location.href=url_;
		}
		
		function approval(parm){
			//alert(parm);
			var data = $('#pageTable').datagrid("getSelections");
			var PRO_CODES = new Array();
			$(data).each(function(){
				PRO_CODES.push(this.ID);
			})
			//
			var jsonData = $("#queryForm").serialize();
			var jsonData = $("#queryForm").serialize()+"&PRO_CODES="+PRO_CODES.toString()+"&parm="+parm;
			var url_ = "$_basePath/insure/Insure!insureCheckApproval.action";
			jQuery.ajax({
			   type: "POST",
			   dataType:"json",
			   url: url_,
			   data: jsonData,
			   success: function(msg){
				alert (msg.data);
				window.location.href="$_basePath/insure/Insure.action?type_=2"
			   }
			});
		}
	</script>
</body>
</html>