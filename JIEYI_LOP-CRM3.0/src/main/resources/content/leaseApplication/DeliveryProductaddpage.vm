          // 上传附件
        function upFile() {
			var SENDNOTICEID=$("#SENDNOTICEID").val();
			if(SENDNOTICEID ==''){
				alert("请选保存发货申请单在上传附件！");
				return;
			}
			
			var pathRoot = jQuery.trim($("#upfile").val());
			var id =$(".upfile").attr("id");
			
        	jQuery.ajaxFileUpload({
				type:"post",
				url:"LeaseApplication!uploadProjectFile.action?SENDNOTICEID="+SENDNOTICEID,
				dataType:"json",
				fileElementId:id,
				success:function(e){
						alert("上传成功");
						$("#fileDown").empty();
						json = jQuery.parseJSON(e);
						$("#fileDown").append("<a href='LeaseApplication!downLoadRecordFile.action?file_url="+json.data+"&file_name="+pathRoot+"'><font color='red'>"+pathRoot+"</font></a><br>");
					
				},
				error:function(e){alert("上传失败");}
			});
        }
		
		//电话号码验证,Dom对象
        function IsTelephone(key)// 正则判断
        { 
        	var pattern=/(^[0-9]{3,4}\-[0-9]{3,8}$)|(^[0-9]{3,8}$)|(^\([0-9]{3,4}\)[0-9]{3,8}$)|(^0{0,1}(13|15|18|14)[0-9]{9}$)/; 
        	var obj=$(key).val();
        	if(pattern.test(obj)) 
        	{ 
        		return true; 
        	} 
        	else 
        	{ 
        		alert("联系方式输入错误，请重新输入！");
        		$(key).val("");
        		return false; 
        	} 
        }
