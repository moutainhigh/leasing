<script type="text/javascript">
	function getStatus(value,rowDate,inedx){
		if(value == '0'){
			return "启用中";
		}else{
			return "已禁用";
		}
	}
	
	function updateGuarantor(CLIENT_ID,TYPE,CREDIT_ID,PROJECT_ID){
		//window.location.href=_basePath+"/credit/Credit!updateCreditPage.action?PROJECT_ID="+PROJECT_ID+"&CLIENT_ID="+CLIENT_ID+"&tab=update"+"&date="+new Date().getTime();
		top.addTab("修改担保人信息", _basePath + "/credit/CreditGuarantor!toUpdateGuarantorInfo.action?CREDIT_ID="+CREDIT_ID+"&CLIENT_ID=" + CLIENT_ID + "&TYPE=" + TYPE + "&tab=update"+"&date="+new Date().getTime());
	}
	
	function deleteGuarantor(val,type,n) {
		var number = n - 1;
		$('#guarantorTable').datagrid('selectRow', number);
		if (confirm("确认删除？")) {
			jQuery.ajax({
				url : _basePath + "/customers/Customers!checedCustToPro.action",
				data : "CLIENT_ID=" + val,
				dataType:'json',
				success:function(data){
					if(data.flag==true){
						return alert("该担保人已有项目，不可删除");
					}else{
						jQuery.ajax( {
							url : _basePath + "/customers/Customers!doDetCustInfo.action",
							data : "CLIENT_ID=" + val+"&TYPE="+type,
							dataType : "json",
							success : function(data) {
								if (data.flag == true) {
									alert("删除担保人成功");
									var opts = $('#guarantorTable').datagrid('getSelected');
									var index = $('#guarantorTable').datagrid('getRowIndex',opts);
									$('#guarantorTable').datagrid('deleteRow',index);
								} else {
									alert("删除担保人失败");
								}
							}, 
							error : function(e) {
								alert(e.message);
							}
						});
					}
				}
			});
		}
	}
	
	function score(value,row,index){
		debugger ;
		var FCGI_ID = row.FCGI_ID;
		var NAME = row.NAME;
		return "<a href=javascript:void(0) onclick=scoreAddTab('"+FCGI_ID+"','"+NAME+"')>"+value+"</a>";
	}
	
	function scoreAddTab(FCGI_ID,NAME){
			top.addTab(NAME+"打分",_basePath+"/secuEvaluate/SecuEvaluate!doGradeScore.action?TYPE_ID="+FCGI_ID+"&TYPE=DBR&DBR_NAME="+NAME);
	}
	
	function addDBR(CREDIT_ID,PROJECT_ID){
##		window.location.href=_basePath+"/customers/Customers!toAddCust.action?CREDIT_ID="+CREDIT_ID+"&CUST_TYPE=NP&PROJECT_ID="+PROJECT_ID;
		top.addTab("添加担保人",_basePath+"/customers/Customers!toAddCust.action?CREDIT_ID="+CREDIT_ID+"&CUST_TYPE=NP&PROJECT_ID="+PROJECT_ID);
	}
	
	
	function addDBR1(CREDIT_ID,PROJECT_ID,CUST_TYPE){
		//alert("CREDIT_ID="+CREDIT_ID+"PROJECT_ID="+PROJECT_ID);
		jQuery.ajax({
	        url: _basePath + "/customers/Customers!addCustomerEmpty.action?_dateTime="+new Date(),
	        data: "CREDIT_ID="+CREDIT_ID+"&PROJECT_ID="+PROJECT_ID+"&CUST_TYPE="+CUST_TYPE,
	        type: "post",
			dataType: "json",
	        success: function(json){
	             //alert($(".tabs-selected").children("a"));
                 if(json.flag){
                	$(".tabs-selected").children("a").click();
                	//$("#guarantorTable").datagrid("reload");
				}else{
					$.messager.alert('提示','添加失败，请与管理员联系！','warning');
				}
	        }
	    });
	}
</script>
