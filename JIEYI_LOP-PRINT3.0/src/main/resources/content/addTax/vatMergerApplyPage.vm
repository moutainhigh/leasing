		//导出
        function vatMergerApply(flag){
        	//url
        	var url = "$_basePath/addTax/VatFirstPay!applyVatMergerMethod.action";
        	var datagridList=$("#pageTable").datagrid('getChecked');
        	var sqlData = [];		
        	for(var i = 0; i < datagridList.length; i++)
        	{
        		var pa = {"PAYLIST_CODE":datagridList[i].PAYLIST_CODE,"BEGINNING_NUM":datagridList[i].RENT_LIST,"PROJECT_ID":datagridList[i].PROJECT_ID,LEASE_CODE:datagridList[i].LEASE_CODE,
				"PRO_CODE":datagridList[i].PRO_CODE,"INVOICE_AMT":datagridList[i].INVOICE_AMT,"TAX_RATE":datagridList[i].TAX_RATE,"TAX_TYPE":datagridList[i].TAX_TYPE,"PAY_ID":datagridList[i].PAY_ID};
        		sqlData.push(pa);
        	}
        	
        	//params
        	var searchParams = getFromData('#toolbar');
        	if(flag == 'all'){
        		if($("#pageTable").datagrid('getRows').length <= 0){
        			$.messager.alert('提示','无数据请勿点击申请','info',null);
        			return;
        		}
        	}else{
        		url += "?exportAll=false";
        		if(datagridList.length == 0){
        			alert("请选择要申请的数据");
        			return;
        		}
        	}
        	$('#form01').form('submit',{
                url:url,
                onSubmit: function(){
        			//导出标识
        			if($('#sqlData').length<=0){
        				$('#form01').append('<input name=\"sqlData\"  id=\"sqlData\" type=\"hidden\" />');
        			}
        			$('#sqlData').val(JSON.stringify(sqlData));
                },
                success : function(){
                	se();
                }
            });
        	$('#sqlData').remove();
        	se();
        }
 
    </script>
