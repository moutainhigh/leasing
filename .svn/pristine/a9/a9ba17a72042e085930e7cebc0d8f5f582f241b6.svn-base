        .checkbox {
            width: 120px;
            height: 40px;
            background: #3071a9;
            border-radius: 50px;
            position: relative;
        }
        /**
         * Create the text for the On position
         */
        .checkbox:before {
            content: '开';
            position: absolute;
            top: 8px;
            left: 20px;
            height: 2px;
            color: #26ca28;
            font-size: 16px;
        }
        /**
         * Create the label for the off position
         */
        .checkbox:after {
            content: '关';
            position: absolute;
            top: 8px;
            left: 80px;
            height: 2px;
            color: #ddd;
            font-size: 16px;
        }

        /**
         * Create the pill to click
         */
        .checkbox label {
            display: block;
            width: 52px;
            border-radius: 50px;
            -webkit-transition: all .5s ease;
            -moz-transition: all .5s ease;
            -o-transition: all .5s ease;
            -ms-transition: all .5s ease;
            transition: all .5s ease;
            cursor: pointer;
            position: absolute;
            top:10px;
            left:10px;
            z-index: 1;
            background: #fff;
        }

        /**
         * Create the checkbox event for the label
         */
        .checkbox input[type=checkbox]:checked + label {
            left: 60px;
            background: #26ca28;
        }
	</style>
</head>
