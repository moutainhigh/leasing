<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="insurebxbcsq">
	<!-- 分页查询 -->
	<select id="queryAll"  parameterType="Map" resultType="Map">
		SELECT * FROM (SELECT T.*,ROWNUM ROWNO FROM (
		 	SELECT 	ID,
  					PAY_AMT,
				  	PAY_DATE,
				  	AMOUNT,
				  	STATUS,
				  	FUND_NAME,
				  	IS_SUB
      		FROM 	FIL_INSURE_APPLY_INFO
	      	WHERE FUND_NAME = '保险补差收款'
	      		<if test="GLIDE_ID != null and GLIDE_ID != ''">
				 	  AND ID = '${GLIDE_ID}'
				</if>
	      		<if test="STATUS != null and STATUS !=''">
	      			<![CDATA[
				 	  AND STATUS <> '${STATUS}'
				 	]]>
	      		</if>
	      		<if test="IS_SUB != null and IS_SUB !=''">
	      			<![CDATA[
				 	  AND NVL(IS_SUB,' ')<> #{IS_SUB}
				 	]]>
	      		</if>
	      		<if test="FK_DATE_BEGIN != null and FK_DATE_BEGIN != ''">
	      			<![CDATA[
				 	  AND PAY_DATE >= #{FK_DATE_BEGIN}
				 	]]>
	      		</if>
				<if test="FK_DATE_END != null and FK_DATE_END != ''">
					<![CDATA[
				 	  AND PAY_DATE <= #{FK_DATE_END}
				 	]]>
				</if>
	        ORDER BY ID DESC
     ) T )TT WHERE TT.ROWNO BETWEEN #{PAGE_BEGIN} AND #{PAGE_END}
	</select>
	
	<!-- 查询总数 -->
	<select id="queryCount"  parameterType="java.util.Map" resultType="int">
		SELECT COUNT(1)
     	FROM 	FIL_INSURE_APPLY_INFO
	      	WHERE FUND_NAME = '保险补差收款'
	      		<if test="GLIDE_ID != null and GLIDE_ID != ''">
				 	  AND ID = '${GLIDE_ID}'
				</if>
	      		<if test="STATUS != null and STATUS !=''">
	      			<![CDATA[
				 	  AND STATUS <> '${STATUS}'
				 	]]>
	      		</if>
	      		<if test="IS_SUB != null and IS_SUB !=''">
	      			<![CDATA[
				 	  AND NVL(IS_SUB,' ')<> #{IS_SUB}
				 	]]>
	      		</if>
	      		<if test="FK_DATE_BEGIN != null and FK_DATE_BEGIN != ''">
	      			<![CDATA[
				 	  AND PAY_DATE >= #{FK_DATE_BEGIN}
				 	]]>
	      		</if>
				<if test="FK_DATE_END != null and FK_DATE_END != ''">
					<![CDATA[
				 	  AND PAY_DATE <= #{FK_DATE_END}
				 	]]>
				</if>
	</select>
	
	<!-- 删除一个补差收取申请 -->
	<delete id="deleteBCSQApply" parameterType="Map">
			DELETE FROM FIL_INSURE_APPLY_INFO
			WHERE  ID = #{ID}
	</delete>
	
	<!-- 提交一个补差收取申请 -->
	<update id="commitBCSQApply" parameterType="java.util.Map">
		UPDATE 	FIL_INSURE_APPLY_INFO
		SET 	IS_SUB = #{IS_SUB},
				STATUS = #{STATUS}
		WHERE ID = #{ID}
	</update>
</mapper>