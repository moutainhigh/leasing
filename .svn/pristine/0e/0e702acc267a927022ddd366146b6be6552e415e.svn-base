		function save(){
		   var INVOICE_CODE = $("#dlg input[name='INVOICE_CODE']").val();
		   var INVOICE_DATE = $("#INVOICE_DATE_NEW").datebox("getValue");
		   var TAI_NUM = $("#dlg input[name='TAI_NUM']").val();
		   var INVOICE_AMOUNT = $("#dlg input[name='INVOICE_AMOUNT']").val();
		   var INVOICE_TAX = $("#dlg input[name='INVOICE_TAX']").val();
		   var DRAWER = $("#dlg input[name='DRAWER']").val();
		   var SALES_UNIT_ID = $("#dlg input[name='SALES_UNIT_ID']").val();
		   var PROJECT_ID = $("#dlg input[name='PROJECT_ID']").val();
		   var PAY_ID = $("#dlg input[name='PAY_ID']").val();
		   var INVOICE_MEMO =$("#dlg textarea").val();
		   var LEASE_TOPRIC = $("#dlg input[name='LEASE_TOPRIC']").val();
		   var EQINVOICE_LEGER_NO = $("#dlg input[name='EQINVOICE_LEGER_NO']").val();
		   var SUM_TAI_NUM = $("#dlg input[name='SUM_TAI_NUM']").val();
		   var SUM_INVOICE_MONEY = $("#dlg input[name='SUM_INVOICE_MONEY']").val();
		   var amount = $("#dlg input[name='AMOUNT']").val();
		   
		   var tem=	parseFloat(LEASE_TOPRIC)*0.17/1.17;
		   tem = Number(tem).toFixed(2);
		   if(parseFloat(INVOICE_TAX)>(parseFloat(tem)+0.5)||parseFloat(INVOICE_TAX)<(parseFloat(tem)-0.5)){//校验税额
				jQuery.messager.alert("提示","税额填写错误。正确值为"+(parseFloat(tem)-0.5)+"到"+ (parseFloat(tem)+0.5)+"之间");
				return false;
		   }
		   
		   //发票已经录入金额验证
		   var invoice_money = parseFloat(LEASE_TOPRIC)+ parseFloat(SUM_INVOICE_MONEY);
		   if(parseFloat(invoice_money)>parseFloat(LEASE_TOPRIC)){
		      jQuery.messager.alert("提示","发票总金额不能大于设备购买价款！");
			  return false;
		   }
		   jQuery.ajax({
				url: "$_basePath/eqInvoices/EqInvoices!addManualInvoice.action",
				data: "INVOICE_CODE="+INVOICE_CODE+"&INVOICE_DATE="+INVOICE_DATE+"&TAI_NUM="+TAI_NUM+"&INVOICE_AMOUNT="+INVOICE_AMOUNT+"&INVOICE_TAX="+INVOICE_TAX+"&DRAWER="+encodeURI(DRAWER)+"&SALES_UNIT_ID="+SALES_UNIT_ID+"&PROJECT_ID="+PROJECT_ID+"&INVOICE_MEMO="+encodeURI(INVOICE_MEMO)+"&EQINVOICE_LEGER_NO="+EQINVOICE_LEGER_NO+"&PAY_ID="+PAY_ID,
				dataType:"json",
				success: function(res){
					if(res.flag==true){
						jQuery.messager.alert("提示",res.msg);
						clearMess();
						$('#pageTable').datagrid('reload');
						$('#dlg').dialog('close');
				    }
				    else{
					   jQuery.messager.alert("提示",res.msg);
					   clearMess();
				    }
				}
					 
			});
		}
