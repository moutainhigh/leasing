		function uploadSave(){
		   var type = $("#UPLOAD_TYPE").val();
		   var url = "";
		   if(type != "" && type =="addInvoice"){
		      url = "$_basePath/eqInvoices/EqInvoices!addInportExcel.action";
		   }else{
		      url = "$_basePath/eqInvoices/EqInvoices!checkEQInvoiceExcel.action";
		   }
		   var filename = $('#eqInvoice').val();
		   if(filename.indexOf('xls') == -1)
			{
				jQuery.messager.alert('提示','请勿上传非xls结尾的文件','');
				return false;
			}
		   jQuery.ajaxFileUpload({
            	url: url,
            	secureuri:false,
            	fileElementId:"eqInvoice",	 
            	dataType: "json",
				success: function (data,status)  //服务器成功响应处理函数
                {    
				     var data = JSON.parse(data);
					 if(data.data >0){
					    $("#importInvoceMess'").dialog('close');
					    jQuery.messager.alert("提示",data.msg);
						$('#pageTable').datagrid('reload');
					 }else{
					    $("#importInvoceMess").dialog('close');
        			    jQuery.messager.alert("提示",data.msg);
						$('#pageTable').datagrid('reload');
					 }
                },
    
           });	
	   
		}
		
