<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>查看经销商授信</title>
	#parse("content/importBase.vm")
</head>
<body>
	<table  cellpadding="0" cellspacing="0" class="table_01">
		<tr>
			<td class="text_right">
				厂商名称
			</td>
			<td>
				$!sup.COMPANY_NAME
			</td>
			<td class="text_right">
				协议编号
			</td>
			<td>
				$!param.CUGP_CODE
			</td>
		</tr>
		<tr>
			<td class="text_right">
				授信总额度
			</td>
			<td>
				$!param.ALL_GRANT_PRICE
			</td>
			<td class="text_right">
				控制额度
			</td>
			<td>
				$!param.GRANT_PRICE
			</td>
		</tr>
		<tr>
			<td class="text_right">
				授信余额
			</td>
			<td>
				$!param.LAST_PRICE
			</td>
			<td class="text_right">
				是否循环授信
			</td>
			<td>
				<input type="radio" name="REPEAT_CREDIT" id="REPEAT_CREDIT" disabled #if($!param.REPEAT_CREDIT=='0') checked #end value="0"/>是 &nbsp;&nbsp;
				<input type="radio" name="REPEAT_CREDIT" id="REPEAT_CREDIT" disabled #if($!param.REPEAT_CREDIT=='1') checked #end value="1"/>否
			</td>
		</tr>
		<tr>
			<td class="text_right">
				授信有效期
			</td>
			<td>
				$!param.START_DATE - $!param.END_DATE
			</td>
			<td class="text_right">
				附件
			</td>
			<td>
				#if($param.FUJIAN)
					<a href="$!param.FUJIAN">下载附件</a>
				#else
					无附件
				#end
			</td>
		</tr>
		<tr>
			<td class="text_right">
				备注
			</td>
			<td colspan="3">
				<textarea cols=100 rows=5 name="REMARK" disabled ID="REMARK">$!param.REMARK</textarea>
			</td>
		</tr>
		<tr>
			<td>匹配商务政策名称</td>
			<td><input type="text" name="SCHEME_NAME" id="SCHEME_NAME"  value="$!param.SCHEME_NAME" readonly/> </td>
			<td>商务政策类型 </td>
			<td>
			   <input type="text" name="SCHEME_TYPE" id="SCHEME_TYPE"  value="$!param.SCHEME_TYPE" readonly/>
		    </td>
		</tr>	
	</table>
	<div style="height:20px;"></div>
	<table  cellpadding="0" cellspacing="0" class="table_01">
		<thead>
			<tr>
				<td colspan ="7" align="center"><strong>授信历史记录</strong></td>
			</tr>
		</thead>
		<tbody>
			<tr>
			  <td>序号</td>
			  <td>授信金额 </td>
			  <td>授信余额 </td>
			  <td>授信起始日期 </td>
			  <td>授信结束日期 </td>
			  <td>操作时间 </td>
			  <td>备注 </td>
			</tr>
			#foreach($item in $!log)
			<tr>
			  <td>$velocityCount</td>
			  <td>$!item.GRANT_PRICE</td>
			  <td>$!item.LAST_PRICE </td>
			  <td>$!item.START_DATE </td>
			  <td>$!item.END_DATE  </td>
			  <td>$!item.MODIFY_DATE  </td>
			  <td title="$!item.MEMO">
			  #set($memo =  $!item.MEMO)
			  #if($memo) 
				#if($memo.length()>40) #set($memo=$memo.substring(0,40)+"...") $memo #else $memo #end
			  #end
			    </td>
			</tr>
		    #end
		</tbody>
	</table>
</body>
</html>