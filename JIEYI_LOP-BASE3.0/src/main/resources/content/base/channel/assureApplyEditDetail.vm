<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	#parse("content/importBase.vm")
		<script  type="text/javascript">
		function saveMess(){
    		var ASSURE_MONEY = $("#ASSURE_MONEY").val();
    		var ENLARGE_MULTIPLE = $("#ENLARGE_MULTIPLE").val();
    		var APPLY_AMOUNT = $("#APPLY_AMOUNT").val();
    		var APPLY_ID = $("#APPLY_ID").val();
    		jQuery.ajax({
        		type: "POST",
        		url: "AssureCredit!updateApplyMess.action",
        		data: "APPLY_ID="+APPLY_ID+"&ASSURE_MONEY="+ASSURE_MONEY+"&ENLARGE_MULTIPLE="+ENLARGE_MULTIPLE+"&APPLY_AMOUNT="+APPLY_AMOUNT,
        		dataType: "json",
        		success: function(res){
    				if(res.flag==true){
    					jQuery.messager.alert("提示",res.msg);
    				}else{
    				    jQuery.messager.alert("提示",res.msg);
    				}
        		}
        	});
		}
		
		function changApply(){
		   var apply_amount = $("#APPLY_AMOUNT").val();
		   var multiple = $("#ENLARGE_MULTIPLE").val();
		   var result = parseFloat(apply_amount)/parseFloat(multiple);
		   $("#ASSURE_MONEY").val(result);
		}
        </script>
    </head>
  <body class="easyui-layout">
  <table width="100%" cellspacing="0" class="table_01" cellpadding="0" border="0">
		 <tr>
           <td colspan ="6" align="left" class="table_th">供应商授信状况</td>
		 </tr>
		 <tr>
			<td class="text_right">初始授信额度：</td>
            <td >$!applyDanMess.INITIAL_AMOUNT </td>
			<td class="text_right">标准授信额度：</td>
			<td>$!applyDanMess.STANDARD_AMOUNT</td>
			<td class="text_right">担保额度：</td>
			<td>$!applyDanMess.ASSURE_AMOUNT </td>
		 </tr>
		 <tr>
			<td class="text_right">标准可用额度：</td>
            <td >$!applyDanMess.CANUSE_MONEY</td>
			<td class="text_right">标准已用额度：</td>
			<td>$!applyDanMess.USE_MONEY</td>
			<td class="text_right">一单一议可用额度：</td>
			<td>$!applyDanMess.SINGLE_USEMONEY</td>
		 </tr>
    </table>
	<br/>
	<table width="100%" cellspacing="0" class="table_01" cellpadding="0" border="0">
		<tr align="left">
            <td width="4%" rowspan="5" align="center"  bgcolor="#fbfcfc" style="border-left:1;">
                <b>担保<br/>授信<br/>建议<br/></b>
        	</td>
        </tr>
		<tr>
		  <td class="text_right">担保资产类型: </td>
    	  <td>
			<font style="color:red">
			  #if($!applyDanMess.ASSURE_TYPE==1) 保证金  #elseif($!applyDanMess.ASSURE_TYPE==2) 固定资产  #elseif($!applyDanMess.ASSURE_TYPE==3) 有价证券 #end
            </font>
			<input type="hidden" name="APPLY_ID" id="APPLY_ID" value="$!param.APPLY_ID"/>
          </td>
		  <td class="text_right">担保方式：</td>
		  <td>
			<font style="color:red">
			   #if($!applyDanMess.ASSURE_PAYMENT_MODE==0) 先付  #elseif($!applyDanMess.ASSURE_PAYMENT_MODE==1) 后付 #else &nbsp; #end
            </font>
          </td>
        </tr>
		<tr>
		 <td class="text_right">建议担保资产价值：</td>
		  <td>
			<input type="text" name="ASSURE_MONEY" id="ASSURE_MONEY" value="$!applyDanMess.ASSURE_MONEY"  readonly />
          </td>
		  <td class="text_right">建议放大倍数：</td>
          <td>
		    <input type="text" name="ENLARGE_MULTIPLE" id="ENLARGE_MULTIPLE" value="$!applyDanMess.ENLARGE_MULTIPLE"  onchange="changApply()"/>
		  </td>
		</tr>
        <tr>
		  <td class="text_right">供应商申请担保授信额度：</td>
		  <td>
			<input type="text" name="APPLY_AMOUNT" id="APPLY_AMOUNT" readonly value="$!applyDanMess.APPLY_AMOUNT"/>
          </td>
          <td colspan="2">&nbsp;</td>
		</tr>
		<tr>
		  <td colspan="4" align="center">
			<a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="saveMess()">保存</a>
          </td>
        </tr>
    </table>
	<br/>
	<table class="table_01">
		<tr>
    	  <td colspan ="2" align="left" class="table_th">资料附件</td>
    	</tr>
		#if($!applyDanMess.ASSURE_TYPE ==2 || $!applyDanMess.ASSURE_TYPE ==3)
	    <tbody id="Other">
    		<tr>
    		  <td>《申请书》 </td>
    		  <td>
    			<table>
					<tr>
					   <td>描述</td>
					   <td>文件名</td>
					   <td>操作</td>
                    </tr>
				   #foreach($!item in $!applyBook)
					<tr>
                      <td>$!item.FIL_MEMO</td>
					  <td>$!item.FIL_NAME</td>
					  <td><a href="Channel!downLoadSupFile.action?FIL_ID=$!item.FIL_ID">下载</a></td>
					</tr>
					#end
                </table>
              </td>
    		</tr>
    		<tr>
    		  <td>《不动产/有价证券照片》</td>
    		  <td>
    			<table>
					<tr>
					   <td>描述</td>
					   <td>文件名</td>
					   <td>操作</td>
                    </tr>
					#foreach($!item in $!assets)
					<tr>
                      <td>$!item.FIL_MEMO</td>
					  <td>$!item.FIL_NAME</td>
					  <td><a href="Channel!downLoadSupFile.action?FIL_ID=$!item.FIL_ID">下载</a></td>
					</tr>
					#end
                </table>
              </td>
    		</tr>
    		<tr>
    		  <td>其他资料 </td>
    		  <td>
				<table>
					<tr >
					   <td>描述</td>
					   <td>文件名</td>
					   <td>操作</td>
                    </tr>
					#foreach($!item in $!OtherData)
					<tr>
                      <td>$!item.FIL_MEMO</td>
					  <td>$!item.FIL_NAME</td>
					  <td><a href="Channel!downLoadSupFile.action?FIL_ID=$!item.FIL_ID">下载</a></td>
					</tr>
					#end
                </table>
              </td>
    		</tr>
		</tbody>
		#else
		<tbody id="MONEY">
			<tr>
    		  <td>《申请书》 </td>
    		  <td>
    			 <table>
					<tr >
					   <td>描述</td>
					   <td>文件名</td>
					   <td>操作</td>
                    </tr>
					#foreach($!item in $!applyBook)
					<tr>
                      <td>$!item.FIL_MEMO</td>
					  <td>$!item.FIL_NAME</td>
					  <td><a href="Channel!downLoadSupFile.action?FIL_ID=$!item.FIL_ID">下载</a></td>
					</tr>
					#end
                 </table> 
              </td>
    		</tr>
        </tbody>
		#end
    </table>
   </body>
</html>