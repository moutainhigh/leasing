        select CODE ORGAN_CODE, NAME ORGAN_NAME
        from SECU_ORG
        where TYPE = 5 and NAME like '%门店%'
        start with ID = (select ORD_ID from fil_project_head where ID = #{PROJECT_ID, jdbcType=DECIMAL})
        connect by prior PARENT_ID = ID
