<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="-1" />
<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes"/>
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="format-detection" content="telephone=no">
<title>工作台</title>
<script src="http://cdn.bootcss.com/jquery/2.1.3/jquery.min.js" ></script>
<script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
<style type="text/css">
	.div01 .css_color{
		color:#979797
	}
</style>
<script type="text/javascript">
//初始化
wx.config({
    debug: false,
    appId: 'wx3eedc1affdb8f4f7',
    timestamp: $!timestamp,
    nonceStr: $!nonceStr,
    signature: $!signature,
    jsApiList: [
      'checkJsApi',
      'chooseImage',
      'previewImage',
      'uploadImage',
      'downloadImage',
      'closeWindow'
    ]
});
wx.ready(function(){
	
});
wx.error(function(res){
	alert(res.errMsg);
});
var images = {localId: [],serverId: [],downlanId:[]};
$(function(){
	$("#checkjs").click(function(){
	wx.checkJsApi({
		jsApiList: [
				'checkJsApi',
				'chooseImage',
				'previewImage',
				'uploadImage',
				'downloadImage'
		          ],
		     success: function (res) {
		       alert(res.errMsg);
		     }
		   });
	});
	
	$("#chooseImage").click(function(){
		wx.chooseImage({
			  count:5,
		      success: function (res) {
		        images.localId = res.localIds;
		        if(res.localIds.length>0){
		        	$("#showImg").empty();
		        	for(var i=0;i<res.localIds.length;i++){
		        		$("#showImg").append('<img alt="预览" width="60px" height="60px" src="'+res.localIds[i]+'">');
		        	}
		        }
		      }
		    });
	});
	
	$("#uploadImage").click(function(){
		if (images.localId.length == 0) {
		     alert("请先选");
		     return;
		}
		 var i = 0, length = images.localId.length;
		 images.serverId = [];
		 /**
		 function upload() {
		      wx.uploadImage({
		        localId: images.localId[i],
		        success: function (res) {
		          i++;
		          images.serverId.push(res.serverId);
		          if (i < length) {
		            upload();
		          }
		        },
		        fail: function (res) {
		          alert(JSON.stringify(res));
		        }
		      });
		    }
		    upload();
		    */
		    for(var i=length-1;i>=0;i--){
		    	upload(images.localId[i]);
		    	images.localId.pop();
		    }
	});
	
	$("#viewImage").click(function(){
		 if (images.serverId.length === 0) {
		      alert('请先上传图片');
		      return;
		  }
		 $("#showImg").empty();
		 var i = 0, length = images.serverId.length;
		 images.downlanId = [];
		 /**
		    function download() {
		      wx.downloadImage({
		        serverId: images.serverId[i],
		        success: function (res) { alert(3);
		          i++;
		          alert(JSON.stringify(res));
		          images.downlanId.push(res.localId);
		          if (i < length) {
		            download();
		            alert(4);
		          }
		        }
		      });
		    }
		    download();
		    */
		    for(var i=0;i<length;i++){
		    	download(images.serverId[i]);
		    }
	});
});
function upload(localId) {
    wx.uploadImage({
      localId: localId,
      success: function (res) {
        images.serverId.push(res.serverId);
      },
      fail: function (res) {
        alert(JSON.stringify(res));
      }
    });
  }
function download(serverId) {
	/**
    wx.downloadImage({
      serverId: serverId,
      success: function (res) {
    	alert(res.localId);  
      }
    });
	*/
	downloadImgToLocal(serverId);
  }
function downloadImgToLocal(serverId){
	jQuery.ajax({
		url : '$_basePath/wx/MyTask!downImage.action',
		type : 'post',
		dataType:'json',
		anysc:false,
		data : {serverId :serverId},
		success:function(res){
			$("#showImg").append('<img alt="预览" width="60px" height="60px" src="'+res.msg+'">');
		}
	});
}
</script>
</head>
<body>
<div style="height:48px;">
当前用户：$!userName<br>
$!signature<br>
<input type='button' value='checkjs' id='checkjs'><br>
<input type='button' value='图片选择' id='chooseImage'><br>
<input type='button' value='上传图片' id='uploadImage'><br>
<input type='button' value='查看图片' id='viewImage'><br>
<div id='showImg'></div>
</div>
</body>
</html>
